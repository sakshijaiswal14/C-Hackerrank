#include <iostream>
#include <string>
using namespace std;

int main() {
	// Complete the program
    string a,b;
    string tmp;
    cin>>a>>b;
    cout<<a.size()<<" "<<b.size()<<endl<<(a+b)<<endl;
    tmp[0]=a[0];
    tmp[1]=b[0];
    a[0]=tmp[1];
    b[0]=tmp[0];
    cout<<a<<" "<<b<<endl;      
    return 0;
}
